	<update id="updateAccountsRole" parameterType="com.entity.tzt.Accounts" >
		 update  accounts set
		<if test="accounts!=null">
		 accounts=#{accounts,jdbcType=VARCHAR}
		</if>
		<if test="passwords!=null">
		,passwords=#{passwords,jdbcType=VARCHAR}
